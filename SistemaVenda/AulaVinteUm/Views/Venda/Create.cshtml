@model AulaVinteUm.Models.Venda

@{
    ViewData["Title"] = "Registrar Venda";
}

<h1>@ViewData["Title"]</h1>

<h4>Venda</h4>
<hr />

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Produtos">Produtos</label>
        <select class="form-control" id="Produtos" name="produtoIds" multiple="multiple">
            @foreach (var produto in ViewBag.Produtos as List<AulaVinteUm.Models.Produto>)
            {
                <option value="@produto.ProdutoId">@produto.Nome</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Quantidades">Quantidades</label>
        <input type="text" class="form-control" id="Quantidades" name="quantidades" placeholder="Ex: 2,3" required />
        <small class="form-text text-muted">Digite as quantidades de cada produto (separadas por vírgula)</small>
    </div>

    <button type="submit" class="btn btn-primary">Registrar Venda</button>
</form>
