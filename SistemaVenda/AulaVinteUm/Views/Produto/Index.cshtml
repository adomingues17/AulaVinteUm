@model IEnumerable<AulaVinteUm.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create", "Produto")">Criar Novo Produto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Estoque</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Nome</td>
                <td>@produto.Preco</td>
                <td>@produto.Estoque</td>
                <td>
                    <a href="@Url.Action("Edit", "Produto", new { id = produto.ProdutoId })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", "Produto", new { id = produto.ProdutoId })" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
