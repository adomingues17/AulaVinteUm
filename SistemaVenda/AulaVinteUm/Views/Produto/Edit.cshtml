@model AulaVinteUm.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<h1>@ViewData["Title"]</h1>

<h4>Produto</h4>
<hr />

<!---->
<form method="post">
    <input type="hidden" asp-for="ProdutoId" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Editar</h2>    

            <div class="mb-3">
                <label asp-for="Nome" class="p-0"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Preco" class="p-0"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Estoque" class="p-0"></label>
                <input asp-for="Estoque" class="form-control" />
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-6 col-md-6">
                    <button type="submit" class="btn btn-outline-primary form-control">Salvar</button>
                </div>
                <div class="col-6 col-md-6">
                    <a asp-controller="Produto" asp-action="Index" class="btn btn-outline-secondary form-control">Voltar</a>

                </div>
            </div>
        </div>
    </div>
</form>
